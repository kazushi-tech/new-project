{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SpecForge Structured Requirements",
  "description": "Schema for structured requirement documents produced by the draft-intake skill",
  "type": "object",
  "required": ["project", "functional_requirements", "non_functional_requirements", "review_metadata"],
  "properties": {
    "project": {
      "type": "object",
      "required": ["name", "type", "description"],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["saas", "ec-site", "mobile-app", "corporate-site", "other"] },
        "description": { "type": "string" },
        "target_users": { "type": "array", "items": { "type": "string" } },
        "problem": { "type": "string" },
        "competitors": { "type": "array", "items": { "type": "string" } },
        "revenue_model": { "type": "string" }
      }
    },
    "functional_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "priority", "description", "source"],
        "properties": {
          "id": { "type": "string", "pattern": "^FR-\\d{3}$" },
          "name": { "type": "string" },
          "priority": { "type": "string", "enum": ["must", "should", "could", "wont"] },
          "description": { "type": "string" },
          "source": { "type": "string", "enum": ["human", "ai-suggested"] },
          "user_stories": { "type": "array", "items": { "type": "string" } },
          "acceptance_criteria": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "non_functional_requirements": {
      "type": "object",
      "properties": {
        "scale": { "type": "string", "enum": ["small", "medium", "large", "enterprise"] },
        "concurrent_users": { "type": "integer", "minimum": 0 },
        "security_level": { "type": "string", "enum": ["basic", "standard", "high", "critical"] },
        "devices": { "type": "array", "items": { "type": "string" } },
        "performance": {
          "type": "object",
          "properties": {
            "response_time_ms": { "type": "integer", "minimum": 0 }
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "category", "description", "source"],
            "properties": {
              "id": { "type": "string", "pattern": "^NFR-\\d{3}$" },
              "category": { "type": "string" },
              "description": { "type": "string" },
              "source": { "type": "string", "enum": ["human", "ai-suggested"] },
              "metric": { "type": "string" },
              "target_value": { "type": "string" }
            }
          }
        }
      }
    },
    "user_roles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "permissions"],
        "properties": {
          "name": { "type": "string" },
          "permissions": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "review_metadata": {
      "type": "object",
      "required": ["draft_version", "intake_date"],
      "properties": {
        "pr_number": { "type": "integer" },
        "draft_version": { "type": "string" },
        "intake_date": { "type": "string", "format": "date" },
        "source_branch": { "type": "string" },
        "review_id": { "type": "string" }
      }
    },
    "ai_findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "target_requirement", "description", "severity", "status"],
        "properties": {
          "id": { "type": "string", "pattern": "^FIND-\\d{3}$" },
          "type": { "type": "string", "enum": ["ambiguity", "missing", "contradiction", "improvement"] },
          "target_requirement": { "type": "string" },
          "description": { "type": "string" },
          "severity": { "type": "string", "enum": ["critical", "major", "minor"] },
          "status": { "type": "string", "enum": ["open", "resolved", "wontfix"] },
          "ai_suggestion": { "type": "string" }
        }
      }
    },
    "unresolved_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "severity", "detected_by"],
        "properties": {
          "id": { "type": "string", "pattern": "^ISS-\\d{3}$" },
          "description": { "type": "string" },
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
          "detected_by": { "type": "string" }
        }
      }
    }
  }
}
